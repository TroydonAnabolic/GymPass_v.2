@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="row reg">
        <div class="col-md-6">
            <form id="profile-form" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="row">
                    <h6>Enter Gym Co-ordinates</h6>
                    <p class="note bg-warning">
                        Note: User Co-ordinate and photo entry enabled for testing purposes - Gym co-ordinates are set by registered gym in real-life scenario.
                        <a class="enter-test-cords" href="#"> <i class="fas fa-map-marker-alt"></i> Use Current cords with 61-21 digit offset</a>
                    </p>
                    <div class="reg-inp-short">
                        <div class="form-group">

                            <label asp-for="Input.TestLat"></label>
                            <input asp-for="Input.TestLat" class="form-control" />
                            <span asp-validation-for="Input.TestLat" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="reg-inp-short">
                        <div class="form-group">

                            <label asp-for="Input.TestLong"></label>
                            <input asp-for="Input.TestLong" class="form-control" />
                            <span asp-validation-for="Input.TestLong" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.UserImage" style="width: 100%;"></label>
                    @if (Model.Input.UserImage != null)
                    {
                        <img style="width:150px;height:150px; object-fit:cover" src="data:image/jpg;charset=utf-8;base64,@(Convert.ToBase64String(Model.Input.UserImage))">
                    }
                    else
                    {
                        <img id="userImage" style="width:150px;height:150px; object-fit:cover" src="">
                    }
                    <input type="file"
                           accept=".png,.jpg,.jpeg,.gif,.tif"
                           asp-for="Input.UserImage"
                           class=""
                           style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                           onchange="document.getElementById('userImage').src = window.URL.createObjectURL(this.files[0])" />
                    <span asp-validation-for="Input.UserImage" class="text-danger"></span>
                </div>

                <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}