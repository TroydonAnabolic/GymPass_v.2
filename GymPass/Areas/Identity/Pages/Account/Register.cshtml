@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="banner">
    <img src="~/images/gympass-banner-1.png" />
    <img class="logo" src="~/images/weight-1399281_1280.png" />
    <h1>
        @ViewData["Title"]
    </h1>
</div>
<div id="url-reg" class="hidden">@ViewBag.HomeUrl</div>
<div class="container-fluid text-center">

    <div class="row reg">
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control input-sm" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="reg-inp-short">
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger sm-input"></span>
                        </div>
                    </div>
                    <div class="reg-inp-short">
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger sm-input"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <h5>Enter Gym Co-ordinates</h5>
                    <p class="note bg-warning">
                        Note: User Co-ordinate and photo entry enabled for testing purposes - Gym co-ordinates are set by registered gym in real-life scenario.
                        <a class="enter-test-cords" href="#"> <i class="fas fa-map-marker-alt"></i> Use Current cords with 61-21 digit offset</a>
                    </p>
                    <div class="reg-inp-short">
                        <div class="form-group">

                            <label asp-for="Input.TestLat"></label>
                            <input asp-for="Input.TestLat" class="form-control reg-lat" />
                            <span asp-validation-for="Input.TestLat" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="reg-inp-short">
                        <div class="form-group">

                            <label asp-for="Input.TestLong"></label>
                            <input asp-for="Input.TestLong" class="form-control reg-long" />
                            <span asp-validation-for="Input.TestLong" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                @* Enter verification photo *@
                <div class="form-group">
                    <div class="row">
                        <label asp-for="Input.UserImage" style="width: 100%;"></label>

                        <input type="file"
                               accept=".png,.jpg,.jpeg,.gif,.tif"
                               asp-for="Input.UserImage"
                               class="upload-file"
                               style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                               onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="Input.UserImage" class="text-danger"></span>
                        <img id="profilePicture" style="width:150px;height:150px;padding-right:1rem; object-fit:cover" src="">

                    </div>
                </div>
                <button type="submit" class="btn btn-block btn-primary">Register</button>
            </form>
        </div>
