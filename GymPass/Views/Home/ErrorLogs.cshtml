@model IEnumerable<GymPass.Models.Error>

@{
    ViewData["Title"] = "ErrorLogs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ErrorLogs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ErrorMessage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ErrorMessage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ErrorID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ErrorID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ErrorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
